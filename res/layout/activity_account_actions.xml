<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/PURPLE" >

    <!-- Page title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/account_actions_title"
        android:textSize="24dp"
        android:textColor="@color/RED"
        android:id="@+id/accountInfoPageTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <!-- Account balance notice -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/string_current_balance"
        android:textSize="24dp"
        android:textColor="@color/ORANGE"
        android:id="@+id/currentBalance"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/accountInfoPageTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <!-- Credit Account button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_credit"
        android:id="@+id/buttonCreditAccount"
        android:onClick="accountAddMoney"
        android:layout_below="@+id/currentBalance"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonTransferMoney"
        android:layout_alignEnd="@+id/buttonTransferMoney"/>

    <!-- Debit Account button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_debit"
        android:id="@+id/buttonDebitAccount"
        android:onClick="accountDeductMoney"
        android:layout_alignTop="@+id/buttonCreditAccount"
        android:layout_alignLeft="@+id/buttonViewStatement"
        android:layout_alignStart="@+id/buttonViewStatement"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <!-- Transfer money button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_transfer"
        android:id="@+id/buttonTransferMoney"
        android:layout_below="@+id/buttonCreditAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/buttonRenameAccount"
        android:layout_alignEnd="@+id/buttonRenameAccount"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_view_statement"
        android:id="@+id/buttonViewStatement"
        android:layout_alignBottom="@+id/buttonTransferMoney"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_rename_account"
        android:id="@+id/buttonRenameAccount"
        android:layout_below="@+id/buttonTransferMoney"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_close"
        android:id="@+id/buttonAccountClose"
        android:layout_alignBottom="@+id/buttonRenameAccount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/buttonViewStatement"
        android:layout_alignStart="@+id/buttonViewStatement"/>

</RelativeLayout>